{% extends 'base.html.twig' %}

{% block title %}My Dashboard - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <!-- User Profile Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Profile</h5>
                    <div class="text-center mb-3">
                        <i class="bi bi-person-circle" style="font-size: 4rem;"></i>
                    </div>
                    <p class="card-text"><strong>Email:</strong> {{ app.user.email }}</p>
                    <p class="card-text"><strong>Role:</strong> {{ app.user.role }}</p>
                    <a href="#" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>

        <!-- My Events -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">My Events</h5>
                    {% if app.user.joinedEvents|length > 0 %}
                        <div class="list-group">
                            {% for event in app.user.joinedEvents %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ event.title }}</h6>
                                        <small>{{ event.startDate|date('M d, Y') }}</small>
                                    </div>
                                    <p class="mb-1">{{ event.description|slice(0, 100) }}...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small>Location: {{ event.location }}</small>
                                        <div>
                                            <a href="{{ path('event_show', {id: event.id}) }}" class="btn btn-sm btn-outline-primary">View Details</a>
                                            <a href="{{ path('event_leave', {id: event.id}) }}" class="btn btn-sm btn-outline-danger">Leave Event</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">You haven't joined any events yet.</p>
                        <a href="{{ path('event_index') }}" class="btn btn-primary">Browse Events</a>
                    {% endif %}
                </div>
            </div>

            <!-- Created Events -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Events I Created</h5>
                    {% if app.user.createdEvents|length > 0 %}
                        <div class="list-group">
                            {% for event in app.user.createdEvents %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ event.title }}</h6>
                                        <small>{{ event.startDate|date('M d, Y') }}</small>
                                    </div>
                                    <p class="mb-1">{{ event.description|slice(0, 100) }}...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small>Status: {{ event.status }}</small>
                                        <div>
                                            <a href="{{ path('event_show', {id: event.id}) }}" class="btn btn-sm btn-outline-primary">View Details</a>
                                            <a href="{{ path('event_edit', {id: event.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">You haven't created any events yet.</p>
                        <a href="{{ path('event_create') }}" class="btn btn-primary">Create Event</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}