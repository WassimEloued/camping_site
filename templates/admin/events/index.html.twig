{% extends 'base.html.twig' %}

{% block title %}Manage Events{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Manage Events</h1>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Creator</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for event in events %}
                                <tr>
                                    <td>{{ event.id }}</td>
                                    <td>{{ event.title }}</td>
                                    <td>{{ event.location }}</td>
                                    <td>
                                        <span class="badge bg-{{ event.status == 'approved' ? 'success' : 'warning' }}">
                                            {{ event.status }}
                                        </span>
                                    </td>
                                    <td>{{ event.creator.email }}</td>
                                    <td>
                                        <form action="{{ path('admin_event_delete', {id: event.id}) }}" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 