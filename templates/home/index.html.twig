{% extends 'base.html.twig' %}

{% block title %}Welcome to WeAreCampers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(var(--overlay-color), var(--overlay-color)), url('{{ asset('images/camping-hero.jpg') }}');
            background-size: cover;
            background-position: center;
            padding: 150px 0;
            margin-top: -1.5rem;
            margin-bottom: 4rem;
            position: relative;
        }
        
        .hero-section::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100px;
            background: linear-gradient(to top, var(--light-bg), transparent);
        }
        
        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 1.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 300;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            margin-bottom: 2rem;
        }
        
        .feature-card {
            transition: all 0.3s ease;
            height: 100%;
            border: none;
            background: var(--light-bg);
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        }
        
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            color: var(--secondary-color);
            transition: transform 0.3s ease;
        }
        
        .feature-card:hover .feature-icon {
            transform: scale(1.1);
        }
        
        .cta-section {
            background: linear-gradient(var(--overlay-color), var(--overlay-color)), url('{{ asset('images/camping-cta.jpg') }}');
            background-size: cover;
            background-position: center;
            padding: 100px 0;
            margin: 4rem 0;
            position: relative;
        }
        
        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100px;
            background: linear-gradient(to bottom, var(--light-bg), transparent);
        }
        
        .cta-section::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100px;
            background: linear-gradient(to top, var(--light-bg), transparent);
        }
        
        .section-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 3rem;
            text-align: center;
            color: var(--dark-color);
        }
        
        .feature-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }
        
        .feature-text {
            color: #666;
            line-height: 1.6;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section text-white text-center">
        <div class="container">
            <h1 class="hero-title">Discover Your Next Adventure</h1>
            <p class="hero-subtitle">Join our community of outdoor enthusiasts and create unforgettable camping experiences.</p>
            {% if not app.user %}
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg px-5 py-3">Get Started</a>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg px-5 py-3">Sign In</a>
                </div>
            {% else %}
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="{{ path('event_index') }}" class="btn btn-primary btn-lg px-5 py-3">Browse Events</a>
                    <a href="{{ path('user_dashboard') }}" class="btn btn-outline-light btn-lg px-5 py-3">My Dashboard</a>
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Features Section -->
    <section class="container mb-5">
        <h2 class="section-title">Why Choose WeAreCampers?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card h-100 p-4">
                    <div class="card-body text-center">
                        <i class="bi bi-people feature-icon"></i>
                        <h3 class="feature-title">Community Driven</h3>
                        <p class="feature-text">Connect with fellow campers, share experiences, and build lasting friendships in the great outdoors.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 p-4">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check feature-icon"></i>
                        <h3 class="feature-title">Easy Planning</h3>
                        <p class="feature-text">Create and join camping events with ease. Our platform makes organizing outdoor adventures simple.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 p-4">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check feature-icon"></i>
                        <h3 class="feature-title">Safe & Secure</h3>
                        <p class="feature-text">Verified users and secure transactions ensure a safe environment for all camping enthusiasts.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section text-white text-center">
        <div class="container position-relative">
            <h2 class="display-4 fw-bold mb-4">Ready to Start Your Adventure?</h2>
            <p class="lead mb-5">Join thousands of campers who have already discovered their next great outdoor experience.</p>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg px-5 py-3">Join Now</a>
            {% else %}
                <a href="{{ path('event_index') }}" class="btn btn-primary btn-lg px-5 py-3">Browse Events</a>
            {% endif %}
        </div>
    </section>
{% endblock %} 