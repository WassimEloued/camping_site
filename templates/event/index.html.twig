{% extends 'base.html.twig' %}

{% block title %}Browse Events{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Browse Events</h1>
            <p class="text-muted">Discover and join exciting camping events</p>
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="col-auto">
                <a href="{{ path('event_create') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Event
                </a>
            </div>
        {% endif %}
    </div>

    {% if events|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for event in events %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if event.photo %}
                            <img src="{{ asset('uploads/events/' ~ event.photo) }}" class="card-img-top" alt="{{ event.title }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ event.title }}</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt"></i> {{ event.location }}<br>
                                <i class="bi bi-calendar"></i> {{ event.startDate|date('M d, Y') }}
                            </p>
                            <p class="card-text">{{ event.description|slice(0, 100) }}...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-people"></i> {{ event.participants|length }}/{{ event.maxParticipants }}
                                </small>
                                <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No events available at the moment.
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('event_create') }}" class="alert-link">Create one now!</a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %} 