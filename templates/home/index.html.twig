{% extends 'base.html.twig' %}

{% block title %}Welcome to WeAreCampers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('{{ asset('images/campbg.jpg') }}');
            background-size: cover;
            background-position: center;
            padding: 100px 0;
            margin-top: -1.5rem;
            margin-bottom: 3rem;
        }
        
        .feature-card {
            transition: transform 0.3s ease;
            height: 100%;
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
        }
        
        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--secondary-color);
        }
        
        .cta-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('{{ asset('images/campbg.jpg') }}');
            background-size: cover;
            background-position: center;
            padding: 80px 0;
            margin: 3rem 0;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section text-white text-center">
        <div class="container">
            <h1 class="display-3 fw-bold mb-4">Discover Your Next Adventure</h1>
            <p class="lead mb-5">Join our community of outdoor enthusiasts and create unforgettable camping experiences.</p>
            {% if not app.user %}
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg px-4 gap-3">Get Started</a>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg px-4">Sign In</a>
                </div>
            {% else %}
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="{{ path('event_index') }}" class="btn btn-primary btn-lg px-4 gap-3">Browse Events</a>
                    <a href="{{ path('user_dashboard') }}" class="btn btn-outline-light btn-lg px-4">My Dashboard</a>
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Features Section -->
    <section class="container mb-5">
        <h2 class="text-center mb-5">Why Choose WeAreCampers?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-calendar-event feature-icon"></i>
                        <h3 class="h4 mb-3">Find Events</h3>
                        <p class="text-muted">Discover camping events near you or create your own. Connect with fellow campers and share experiences.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-people feature-icon"></i>
                        <h3 class="h4 mb-3">Join Community</h3>
                        <p class="text-muted">Connect with like-minded outdoor enthusiasts. Share stories, tips, and create lasting friendships.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-geo-alt feature-icon"></i>
                        <h3 class="h4 mb-3">Explore Nature</h3>
                        <p class="text-muted">Discover new camping spots and explore the great outdoors with our community of adventurers.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section text-white text-center">
        <div class="container">
            <h2 class="display-5 fw-bold mb-4">Ready to Start Your Adventure?</h2>
            <p class="lead mb-5">Join thousands of campers who are already part of our community.</p>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg px-5">Join Now</a>
            {% else %}
                <a href="{{ path('event_index') }}" class="btn btn-primary btn-lg px-5">Browse Events</a>
            {% endif %}
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="container mb-5">
        <h2 class="text-center mb-5">What Our Members Say</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                            <div>
                                <h5 class="mb-0">John Doe</h5>
                                <small class="text-muted">Active Member</small>
                            </div>
                        </div>
                        <p class="card-text">"WeAreCampers has completely transformed how I plan my camping trips. The community is amazing!"</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                            <div>
                                <h5 class="mb-0">Jane Smith</h5>
                                <small class="text-muted">Event Organizer</small>
                            </div>
                        </div>
                        <p class="card-text">"Creating and managing events has never been easier. The platform is intuitive and user-friendly."</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                            <div>
                                <h5 class="mb-0">Mike Johnson</h5>
                                <small class="text-muted">Regular Camper</small>
                            </div>
                        </div>
                        <p class="card-text">"I've met so many great people through WeAreCampers. It's more than just a platform, it's a community."</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %} 